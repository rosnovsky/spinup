{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "$schema": {
      "oneOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "string",
          "pattern": "^[^:/?#]+(/[^:/?#]*)*$"
        }
      ]
    },
    "applications": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/software"
      }
    },
    "fonts": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/software"
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/software"
      }
    }
  },
  "required": ["version", "applications"],
  "additionalProperties": false,
  "definitions": {
    "software": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "package": { "type": "string" },
        "install": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/installCommand"
          }
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["name", "package", "install"],
      "additionalProperties": false
    },
    "installCommand": {
      "type": "object",
      "properties": {
        "distro": { "type": "string" },
        "command": { "type": "string" }
      },
      "required": ["distro", "command"],
      "additionalProperties": false
    }
  }
}
