{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "number",
      "pattern": "^[0-9]+\\+$"
    },
    "$schema": {
      "oneOf": [
        {
          "type": "string",
          "format": "uri"
        },
        {
          "type": "string",
          "pattern": "^[^:/?#]+(/[^:/?#]*)*$"
        }
      ]
    },
    "os": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/os"
      }
    }
  },
  "required": ["version", "os"],
  "additionalProperties": false,
  "definitions": {
    "os": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "applications": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/software",
            "$comment": "Applications"
          }
        },
        "fonts": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/software",
            "$comment": "Fonts"
          }
        },
        "dependencies": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/software",
            "$comment": "Dependencies"
          }
        }
      },
      "required": ["name", "applications"],
      "additionalProperties": false
    },
    "software": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "package": { "type": "string" },
        "install": { "type": "string" },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["name", "package", "install"],
      "additionalProperties": false
    }
  }
}
